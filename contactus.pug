doctype html(lang='zh')
head
    meta(charset='UTF-8')   
    title 日子選物; 
    link(rel='stylesheet', href='style.css')    
    link(rel='shortcut icon', href='imgs/favicon07.png', type='image/x-icon')
body
    #button
        a(href='signup.html') 會員登入
        a(href='#') 購物車
    #nav
        nav
            a(href='index.html')
                img.logo(src='imgs/logo.png', alt='日子選物logo')                
            .link
                a(href='newarrivals.html') 最新商品
                a(href='newarrivals.html') 文具用品
                a(href='newarrivals.html') 生活收納
