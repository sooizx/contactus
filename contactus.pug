                li
                    a(href='#') 品牌總覽
                                  
        section.how-to-shop.col-2
            h3.h5 How to shop                         
            ul.content
                li
                    a(href='#') 關於我們
                                
                li
                    a(href='#') 聯絡我們
                                  
        section.metalinks.col-3
            h3.h5 Daily Groceries               
            ul.content
                li
                    a(href='aboutme.html') 關於我們
                                    
                li
                    a(href='contactus.html') 聯絡我們
                                      
        section.follow-us.col-4
            h3.h5 Follow us
                        
            ul.content
                li.instagram
                    a(href='#', target='_blank') Instagram
                                                                      
                li.facebook
                    a(href='#', target='_blank') Facebook
                                       
        section.other
            form.form-box(method='post', action='/tw/newsletter/subscribe/')
            input#form-email(name='email', placeholder='Email Address', value='', type='text')
