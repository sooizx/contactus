    #member
        h2.memberonly 聯絡我們
        form.contactus-form(method='post')
            label(for='name') 姓名:
            input#name(type='text', name='name', required placeholder='請輸入您的姓名')                                                  
            label(for='email') 信箱:
            input#email(type='email', name='email', required placeholder='請輸入您的信箱')                                                  
            label(for='phone') 電話:
            input#phone(type='phone', name='phone', required placeholder='請輸入您的電話')                                              
            label(for='message') 內容:
            textarea#message(rows='8', cols='30', placeholder='輸入詢問內容' required)                                        
            #button
                input.btn(type='reset', value='重新輸入')
                        
                input.btn(type='submit', value='確認送出')
    
                    
